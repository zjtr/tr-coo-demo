// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist/js",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "typings/globals", "typings/index.d.ts"],
  "tslint": false
}
